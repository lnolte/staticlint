{
  "name": "staticlint",
  "version": "0.1.0",
  "description": "A testing suite for statically generated websites",
  "main": "src/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:lnolte/staticlint.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint"
    }
  },
  "scripts": {
    "cli": "node src/bin.js",
    "lint": "eslint .",
    "test": "pnpm run test:core && pnpm run test:rules",
    "test:rules": "NODE_OPTIONS=--experimental-vm-modules jest src/rules/*/*/spec.js --verbose",
    "test:core": "NODE_OPTIONS=--experimental-vm-modules jest specs/ --verbose"
  },
  "bin": {
    "staticlint": "src/bin.js"
  },
  "author": "Lucas Nolte <hello@lucas-nolte.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.0",
    "cheerio": "^1.0.0-rc.10",
    "glob": "^7.2.0",
    "lodash.groupby": "^4.6.0",
    "sade": "^1.8.1",
    "url-exists-nodejs": "^0.2.3"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7"
  }
}
